{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "colored": {
      "()": "slope_area.ColoredFormatter",
      "fmt": "%(asctime)s %(levelname)s %(name)s %(funcName)20s(): %(message)s",
      "datefmt": "%H:%M:%S"
    },
    "json": {
      "()": "slope_area.JSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName",
        "process": "process",
        "process_name": "processName",
        "warning_category": "warningCategory",
        "warning_filename": "warningFileName",
        "warning_lineno": "warningLineNo"
      }
    }
  },
  "filters": {
    "no_errors": {
      "()": "slope_area.NonErrorFilter"
    },
    "errors": {
      "()": "slope_area.ErrorFilter"
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "formatter": "colored",
      "stream": "ext://sys.stdout",
      "filters": [
        "no_errors"
      ]
    },
    "stderr": {
      "class": "logging.StreamHandler",
      "formatter": "colored",
      "stream": "ext://sys.stderr",
      "filters": [
        "errors"
      ]
    },
    "slopeAreaFile": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logging/slopeArea.log.jsonl",
      "maxBytes": 1000000,
      "backupCount": 10
    }
  },
  "loggers": {
    "root": {
      "level": "ERROR",
      "handlers": [
        "slopeAreaFile"
      ]
    },
    "slopeArea": {
      "level": "DEBUG",
      "handlers": [
        "stdout",
        "stderr",
        "slopeAreaFile"
      ],
      "propagate": false
    }
  }
}
